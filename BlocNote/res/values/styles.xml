<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    

  	<style name="btn_option">
    	<item name="android:background">@drawable/option_button</item>
  	</style>
  	
  	<style name="btn_hide">
    	<item name="android:background">@drawable/hide_button</item>
  	</style>
  	
  	<style name="smiley_sourire">
    	<item name="android:background">@drawable/smiley_sourire</item>
  	</style>
  	
  	<style name="smiley_gros_sourire">
    	<item name="android:background">@drawable/smiley_gros_sourire</item>
  	</style>
  	
  	<style name="smiley_clin_oeil">
    	<item name="android:background">@drawable/smiley_clin_oeil</item>
  	</style>
  	
  	<style name="black_text">
    	<item name="android:textColor">@color/black</item>
  	</style>

</resources>
